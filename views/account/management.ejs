<!-- The Management page -->
<% if (title) { %>
  <h1>
    <%= title %>
  </h1>
  <% } else { res.redirect('/') } %>

    <%- messages() %>

      <% if (errors) { %>
        <ul class="notice">
          <% errors.array().forEach(error=> { %>
            <li>
              <%= error.msg %>
            </li>
            <% }) %>
        </ul>
        <% } %>

          <div class="account">

            <h2>You're logged in!</h2>
            <% if (locals.accountData.account_type==="Client" ) { %>
              <h2>Welcome back, <%= locals.accountData.account_firstname %>!</h2>
              <div class="inv-management">
                <br>
                <h2>Manage Client Account</h2>
                <br>
                <p>Update Data Account Change Password.</p>
                <br>
                <%- locals.classificationList %>
                  <br>
                  <a href="/account/update">Update Account Information</a>
                  <br>
                  <% } else if (locals.accountData.account_type==="Employee" ||
                    locals.accountData.account_type==="Admin" ) { %>
                    <h2>Welcome back, <%= locals.accountData.account_firstname %>!</h2>
                    <div class="inv-management">
                      <br>
                      <h2>Manage Inventory</h2>
                      <br>
                      <p>Please select an option to manage inventory items.</p>
                      <br>
                      <%- locals.classificationList %>
                        <br>
                        <a href="/inv/add-classification">Add New Classification</a>
                        <br>
                        <a href="/inv/add-inventory">Add New Inventory</a>
                        <br>
                        <a href="/inv/update">Update Inventory</a>
                        <br>
                        <a href="/inv/delete-confirm">Delete Inventory</a>
                        <br>
                        <table id="inventoryDisplay"></table>
                        <noscript>JavaScript must be enabled to use this page</noscript>
                        <script src="../../js/inventory.js"></script>
                    </div>
                    <% } %>
              </div>