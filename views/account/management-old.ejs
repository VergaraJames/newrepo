<div class="account">
    <h1>
        <%= title %>
    </h1>
    <p><%- messages() %></p>
    <h2>You're logged in!</h2>
    <% if (locals.accountData.account_type==="Client" ) { %>
        <h2>Welcome , <%= locals.accountData.account_firstname %>!</h2>
        <br>
        <p><a href="/account/update">Update Account Information</a></p>
        <% } else if (locals.accountData.account_type==="Employee" || locals.accountData.account_type==="Admin" ) { %>
            <h3>Welcome back, <%= locals.accountData.account_firstname %>!</h3>
            <h3>Inventory Management</h3>
            <h3>C R U D (Create, Edit, Update, Delete)</h3>

            <ul id="managementLinks">
                <li>
                  <a href="/inv/add-classification">Add new classification</a>
                </li>
                <li>
                  <a href="/inv/add-inventory">Add new inventory</a>
                </li>
                
              </ul>
              
            <% } %>
</div>